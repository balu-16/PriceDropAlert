{
  "manifest_version": 3,
  "name": "Price Drop Alert",
  "version": "1.0",
  "description": "Get alerts when product prices drop to your target price",
  "permissions": ["storage", "alarms", "notifications", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 